<%- include('header.ejs')%>

        <main>
            <div class = "content">
                <form action = '/stories' method = 'POST'>
                    <table>
                        <tr>
                            <td><label for="title">Title</label></td>
                            <td><input type="text" id="title" name="title" class = "fixed-width"></td>
                        </tr>
                        <tr>
                            <td class = "align-top"><label for="content">Content</label></td>
                            <td><textarea rows="5" id="content" name="content" class = "fixed-width" required minlength="10"></textarea></td>
                        </tr>
                        <tr>
                            <td><label for="startTime">Start Time</label></td>
                            <td><input type="text" id="startTime" name="startTime" class = "fixed-width"required></td>
                        </tr>
                        <tr>
                            <td><label for="endTime">End Time</label></td>
                            <td><input type="text" id="endTime" name="endTime" class = "fixed-width"required></td>
                        </tr>
                        <tr>
                            <td><label for="category">Category</label></td>
                            <td><input type="text" id="category" name="category" class = "fixed-width"required></td>
                        </tr>
                        <tr>
                            <td class = "align-top"><label for="location">Location</label></td>
                            <td><input type="text" id="location" name="location" class = "fixed-width"required></td>
                        </tr>
                        <tr>
                            <td class = "align-top"><label for="host">Host</label></td>
                            <td><input type="text" id="host" name="host" class = "fixed-width"required></td>
                        </tr>
                        <tr>
                            <td colspan="2"  class = "align-middle"><button>Submit</button></td>
                        </tr>
                    </table>        
                </form>
            
                </div>
        </main>
<%- include('footer.ejs')%>
<%if(errorMessages.length > 0) {
    errorMessages.forEach(message=>{%>
        <div class = "error"><%=message%></div>
  <%  });
}%>

<%if(successMessages.length > 0) {
    successMessages.forEach(message=>{%>
        <div class = "success"><%=message%></div>
  <%  });
}%>